@import 'kouto-swiss'
@import 'jeet'
@import 'rupture'


normalize()
box-sizing-reset()

ul 
	list-style none
	padding 0
	margin 0
a 
	text-decoration none

.o-wrapper
	display block
	max-width 1024px
	margin 0 auto
	
.s-index-header
	background-color #f6f6f7
	height 75px
	position relative
	&__logo
		max-width 90px
		margin 0 auto
		display block
		padding 15px 0
	&__menu-icon
		width 30px
		height 25px
		position absolute
		top 50%
		left 15px
		transform rotate(0deg) translateY(-50%)
		transition .5s ease-in-out
		cursor pointer
		span
			display block
			position absolute
			height 3px
			width 100%
			background #34425f
			border-radius 9px
			opacity 1
			left 0
			transform rotate(0deg)
			transition .25s ease-in-out
		span:nth-child(1)
			top 0
		span:nth-child(2),span:nth-child(3)
			top 10px
		span:nth-child(4)
			top 20px
		&.open span:nth-child(1)
			top 18px
			width 0%
			left 50%
		&.open span:nth-child(2)
			transform rotate(45deg)
		&.open span:nth-child(3)
			transform rotate(-45deg)
		&.open span:nth-child(4)
			top 18px
			width 0%
			left 50%

		
.c-nav
	width 100vw
	height 100vh
	border-top 3px solid #38c1c8
	position absolute
	left -100%
	top 75px
	background-color #f6f6f7
	transition all .3s ease-in-out
	&.open
		left 0
	&__list
		display flex
		flex-direction column
		&-item
			margin 10px 0 0
			padding 10px 60px 15px 5px
			border-bottom 1px solid #38c1c8
			position relative
			&:after 
				content ''
				background url('../img/icons/blue_arrow.svg') center no-repeat
				width 20px
				height 20px
				position absolute
				right 25px
				top 10px
				transition all .3s ease-in-out
			span 
				color #656565
				text-transform uppercase
				width 100%
				height 100%
				display block
			&.open 
				&:after 
					transform rotateX(180deg)
	&__hidden-list
		display none
		background-color #38c1c8
		box-shadow inset 0 0 10px #9b9b9b
		>li
			padding 7px 0 7px 15px
			a
				color #eaeaea







.c-slider
	&__item
		background url('../img/slider/banner_01.jpg') center no-repeat
		background-size cover


	