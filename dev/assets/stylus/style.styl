@import 'kouto-swiss'
@import 'jeet'
@import 'rupture'


normalize()
box-sizing-reset()

html
body 
	background-color #e7e7e0
	width 100vw
	overflow-x hidden

ul 
	list-style none
	padding 0
	margin 0
a 
	text-decoration none

.o-wrapper
	display block
	max-width 1024px
	margin 0 15px
	+above(1024px)
		margin 0 auto
	
	
.s-index-header
	background-color #f6f6f7
	height 75px
	position relative
	&__logo
		max-width 90px
		margin 0 auto
		display block
		padding 15px 0
	&__menu-icon
		width 30px
		height 25px
		position absolute
		top 50%
		left 15px
		transform rotate(0deg) translateY(-50%)
		transition .5s ease-in-out
		cursor pointer
		span
			display block
			position absolute
			height 3px
			width 100%
			background #34425f
			border-radius 9px
			opacity 1
			left 0
			transform rotate(0deg)
			transition .25s ease-in-out
		span:nth-child(1)
			top 0
		span:nth-child(2),span:nth-child(3)
			top 10px
		span:nth-child(4)
			top 20px
		&.open span:nth-child(1)
			top 18px
			width 0%
			left 50%
		&.open span:nth-child(2)
			transform rotate(45deg)
		&.open span:nth-child(3)
			transform rotate(-45deg)
		&.open span:nth-child(4)
			top 18px
			width 0%
			left 50%

		
.c-nav
	width 100vw
	height 100vh
	border-top 3px solid #38c1c8
	position absolute
	left -100%
	top 75px
	background-color #f6f6f7
	transition all .3s ease-in-out
	z-index 100
	&.open
		left 0
	&__list
		display flex
		flex-direction column
		&-item
			margin 10px 0 0
			padding 10px 60px 15px 5px
			border-bottom 1px solid #38c1c8
			position relative
			&:after 
				content ''
				background url('../img/icons/blue_arrow.svg') center no-repeat
				width 20px
				height 20px
				position absolute
				right 25px
				top 10px
				transition all .3s ease-in-out
			span 
				color #656565
				text-transform uppercase
				width 100%
				height 100%
				display block
			&.open 
				&:after 
					transform rotateX(180deg)
	&__hidden-list
		display none
		background-color #38c1c8
		box-shadow inset 0 0 10px #9b9b9b
		>li
			padding 7px 0 7px 15px
			a
				color #eaeaea







.c-slider
	position relative
	&__item
		background-repeat no-repeat
		background-position center
		background-size cover
		padding 20px 70px 120px
		color #fff
		&-ttl
			text-transform uppercase
			border 4px solid #fff
			padding 20px
			font-size rem(25px)
			text-align center
			max-width 600px
			margin 55px auto 30px
		&-txt
			text-align center
			display block
			font-size rem(14px)
			font-weight 100
			max-width 420px
			margin 0 auto
	&__arrow
		position absolute
		background url('../img/icons/white_arrow.svg') center no-repeat
		background-size contain
		width 20px
		height 30px
		top 50%
		transform-origin center
		&--prev
			transform rotateY(0deg) translateY(-50%)
			left 10px
		&--next
			transform rotateY(180deg) translateY(-50%)
			right 10px





.s-lookingfor
	position relative
	background-color #e7e7e0
	&:before
		content ''
		width 200vw
		height 300px
		position absolute
		top -20px
		z-index 5
		background-color #e7e7e0
		transform rotateZ(-5deg)
		left -80px
		transform-origin left
	.o-wrapper
		position relative
		z-index 10
		

.c-content-ttl
	color #656565
	font-size 25px
	text-align center
	text-transform uppercase
	position relative
	margin-bottom 2em
	&--color-blue
		&:after 
			background-color #38c1c8
	&--color-green
		&:after 
			background-color #a8d05f
	&:after 
		content ''
		width 110px
		height 6px
		position absolute
		bottom -20px
		left 50%
		transform translateX(-50%)
	


.c-list-circle
	padding 0 0 3em
	display flex
	flex-wrap wrap
	justify-content center
	text-align center
	&__item 
		max-width 280px
		margin 2em 0
		&-ttl 
			color #656565
			font-size rem(22px)
			text-transform uppercase
			margin-bottom 15px
		&-text 
			font-size 16px
			color #656565
			font-weight 100
			padding 0 35px
			display block
	&__img-wrapper
		border-radius 50%
		overflow hidden
		width 230px
		height 230px
		display block
		margin 0 auto
		border 5px solid #38c1c8
	&__img 
		border-radius 50%
		width 100%
		height 100%
		object-fit cover
		object-position center
		border 5px solid #e7e7e0



.s-accommodations
	background-color #e7e7e0
	padding 1em 0



.c-list-about
	display flex
	flex-wrap wrap 
	&__item
		color #656565
		position relative
		margin 0 0 1em
		padding-bottom 6em
		text-align center
		&-ttl
			text-transform uppercase
			font-size rem(22px)
		p 
			font-size rem(16px)
			font-weight 100
		.c-btn
			position absolute
			left 50%
			transform translateX(-50%)
			padding 15px 25px
			margin-top 20px

.c-btn
	color #fff
	&--color-green
		background-color #a8d05f








.s-contact
	background-color #32b3b9
	position relative
	&:before
		content ''
		width 200vw
		height 300px
		position absolute
		top -20px
		z-index 5
		background-color #32b3b9
		transform rotateZ(-5deg)
		left -80px
		transform-origin left
	.o-wrapper
		position relative
		z-index 10
		





form 
	label
		display block
		border 2px solid #fff
		padding 7px 15px
		margin 12px 0 22px
		color #fff
		text-transform uppercase
		font-size 12px
		font-weight 100
	input[type="text"]
	input[type="email"]
	textarea
		background-color transparent
		border none
		outline none
		color #34425f
		text-transform uppercase
		font-size 12px
		
	textarea
		display block
		width 100%
		height 100px
	
		